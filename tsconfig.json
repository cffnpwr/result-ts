{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "noEmitHelpers": false,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "strict": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*", "*.config.ts"],
  "exclude": ["node_modules", "./dist"]
}
